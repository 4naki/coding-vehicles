@name 4 legged animal mech bone function

#-- Creator: ClockEFFX
if(first()){
    function boneCreate(I,E:entity,Offset:vector,V){
        holoCreate(I)
        holoPos(I,E:toWorld(Offset))
        holoAng(I,E:toWorld(ang(0,0,0)))
        holoParent(I,E)
        holoScale(I,vec(V>0))
    }
    #boneCreate(1, Base, Part, vec(), BonesVisible)
}
